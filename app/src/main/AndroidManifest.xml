<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="boliveira.com.rxkotlinmvvm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.boliveira.rxkotlin.activity.CompanyListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.boliveira.rxkotlin.activity.CompanyDetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.boliveira.rxkotlin.activity.CompanyListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.boliveira.rxkotlin.activity.CompanyListActivity" />
        </activity>
    </application>

</manifest>